---
import Layout from '../layouts/Layout.astro';
import { BentoGrid, BentoBox } from '../components/bento/BentoGridMotion';
---

<Layout title="Invest in AI-Validated Platforms - TechFlunky">
  <main class="min-h-screen bg-black">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-sm border-b border-yellow-400/20">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <img src="/assets/techflunky-logo.png" alt="TechFlunky" class="w-10 h-10">
            <span class="text-xl font-bold text-white">TechFlunky</span>
          </div>
          <div class="hidden md:flex items-center space-x-8">
            <a href="/" class="text-gray-300 hover:text-yellow-400 transition font-medium">Home</a>
            <a href="/browse" class="text-gray-300 hover:text-yellow-400 transition font-medium">Browse</a>
            <a href="/invest" class="text-yellow-400 font-medium">Invest</a>
            <a href="/sell" class="text-gray-300 hover:text-yellow-400 transition font-medium">Sell</a>
            <a href="/about" class="text-gray-300 hover:text-yellow-400 transition font-medium">About</a>
            <a href="/contact" class="bg-yellow-400 text-black px-4 py-2 rounded-lg font-semibold hover:bg-yellow-300 transition">Contact</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-black via-gray-900 to-black text-white overflow-hidden pt-24 pb-16">
      <!-- Subtle grid pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="h-full w-full bg-grid-pattern"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-black leading-tight mb-6 animate-slide-up">
            <span class="block text-white">Invest in</span>
            <span class="block text-yellow-400">AI-Validated</span>
            <span class="block text-white">Platforms</span>
          </h1>
          <p class="text-xl text-gray-300 mb-8 animate-slide-up" style="animation-delay: 0.1s">
            Every platform is thoroughly analyzed by our AI system to ensure truthfulness and quality without exposing trade secrets.
          </p>

          <!-- AI Validation Guarantee -->
          <div class="flex items-center justify-center gap-4 p-6 bg-yellow-400/10 border border-yellow-400/20 rounded-2xl mb-8 animate-slide-up" style="animation-delay: 0.2s">
            <div class="w-12 h-12 bg-yellow-400/20 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <div class="text-left">
              <div class="text-lg font-bold text-yellow-400">100% AI-Verified Quality</div>
              <div class="text-sm text-gray-300">Advanced AI examines code structure, dependencies, and claims verification</div>
              <div class="text-xs text-gray-400 mt-1">✅ No trade secrets exposed • ✅ Truthfulness validated • ✅ Quality assured</div>
            </div>
          </div>

          <a href="/investor/onboarding" class="bg-yellow-400 text-black px-8 py-4 rounded-xl font-bold text-lg hover:bg-yellow-300 transition-all duration-300 transform hover:scale-105 animate-slide-up" style="animation-delay: 0.3s">
            Start Investing Today
          </a>
        </div>
      </div>
    </section>

    <!-- AI Validation Process -->
    <section class="py-24 bg-gradient-to-br from-gray-900 via-black to-gray-900">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">AI-Powered Due Diligence</h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Our trained AI system performs comprehensive analysis without accessing proprietary source code
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <!-- Safe Metadata Extraction -->
          <div class="card-glass p-8">
            <div class="w-16 h-16 bg-yellow-400/20 rounded-2xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Safe Analysis</h3>
            <p class="text-gray-300 mb-4">
              AI examines repository structure, dependencies, configuration files, and documentation without accessing source code.
            </p>
            <ul class="text-sm text-gray-400 space-y-2">
              <li>• File structure patterns</li>
              <li>• Package dependencies</li>
              <li>• Test coverage indicators</li>
              <li>• Documentation quality</li>
              <li>• Security compliance</li>
            </ul>
          </div>

          <!-- Truthfulness Validation -->
          <div class="card-glass p-8">
            <div class="w-16 h-16 bg-yellow-400/20 rounded-2xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Claim Verification</h3>
            <p class="text-gray-300 mb-4">
              Cross-references seller claims against technical evidence to identify inconsistencies and red flags.
            </p>
            <ul class="text-sm text-gray-400 space-y-2">
              <li>• Tech stack validation</li>
              <li>• Feature capability check</li>
              <li>• Scale claims verification</li>
              <li>• Revenue claim analysis</li>
              <li>• Deployment readiness</li>
            </ul>
          </div>

          <!-- Quality Scoring -->
          <div class="card-glass p-8">
            <div class="w-16 h-16 bg-yellow-400/20 rounded-2xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Quality Scoring</h3>
            <p class="text-gray-300 mb-4">
              Comprehensive scoring across multiple dimensions provides investment confidence levels.
            </p>
            <ul class="text-sm text-gray-400 space-y-2">
              <li>• Code quality metrics</li>
              <li>• Architecture assessment</li>
              <li>• Security evaluation</li>
              <li>• Scalability potential</li>
              <li>• Business viability</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Investor Tiers -->
    <section class="py-24 bg-black">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">Investment Opportunities</h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Choose your investment level and get access to curated, validated platforms
          </p>
        </div>

        <div class="grid lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
          <!-- Angel Investor -->
          <div class="card-glass p-8 hover:border-yellow-400/40 transition-all duration-300">
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-white mb-2">Angel Investor</h3>
              <div class="text-yellow-400 text-lg font-semibold">$5K - $250K</div>
              <div class="text-sm text-gray-400 mt-1">per investment</div>
            </div>

            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Deal discovery dashboard</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Basic AI analytics</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Direct messaging with sellers</span>
              </li>
            </ul>

            <a href="/investor/onboarding?tier=angel" class="btn-secondary w-full block text-center">
              Apply as Angel
            </a>
          </div>

          <!-- Accredited Investor -->
          <div class="card-glass p-8 border-yellow-400/40 hover:border-yellow-400/60 transition-all duration-300 relative">
            <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
              <span class="bg-yellow-400 text-black px-3 py-1 rounded-full text-xs font-bold">POPULAR</span>
            </div>

            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-white mb-2">Accredited Investor</h3>
              <div class="text-yellow-400 text-lg font-semibold">$25K - $1M</div>
              <div class="text-sm text-gray-400 mt-1">per investment</div>
            </div>

            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Advanced AI analytics</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Syndicate creation tools</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Priority deal access</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Portfolio management</span>
              </li>
            </ul>

            <a href="/investor/onboarding?tier=accredited" class="btn-primary w-full block text-center">
              Apply as Accredited
            </a>
          </div>

          <!-- VC Fund -->
          <div class="card-glass p-8 hover:border-yellow-400/40 transition-all duration-300">
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-white mb-2">VC Fund</h3>
              <div class="text-yellow-400 text-lg font-semibold">$100K - $10M</div>
              <div class="text-sm text-gray-400 mt-1">per investment</div>
            </div>

            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">White-label portal</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-300 text-sm">Institutional analytics</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
