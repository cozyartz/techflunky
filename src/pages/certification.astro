<script>
  function requestCertification(level) {
    // Check if user has a blueprint to certify
    const hasBlueprint = localStorage.getItem('blueprintId') || sessionStorage.getItem('blueprintId');

    if (!hasBlueprint) {
      // Redirect to blueprint wizard first
      window.location.href = '/blueprint-wizard?certification=' + level;
      return;
    }

    // Track certification request
    if (typeof gtag !== 'undefined') {
      gtag('event', 'certification_request', {
        certification_level: level,
        event_category: 'conversion'
      });
    }

    // Redirect to certification flow
    window.location.href = `/blueprint/certify?level=${level}&blueprintId=${hasBlueprint}`;
  }

  // Add certification badge hover effects
  document.querySelectorAll('.certification-badge-container').forEach(badge => {
    badge.addEventListener('mouseenter', () => {
      badge.style.transform = 'scale(1.05)';
      badge.style.transition = 'transform 0.2s ease';
    });

    badge.addEventListener('mouseleave', () => {
      badge.style.transform = 'scale(1)';
    });
  });
</script>