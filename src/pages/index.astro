---
import Layout from '../layouts/Layout.astro';
---

<Layout title="TechFlunky - Marketplace for Validated Business Ideas">
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-indigo-900 to-purple-800 text-white">
      <div class="container mx-auto px-4 py-24">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">
            Turn Business Ideas Into Revenue
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-indigo-100">
            The marketplace for validated business concepts. Buy proven ideas or sell your next million-dollar concept.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/browse" class="bg-white text-indigo-900 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition">
              Browse Ideas
            </a>
            <a href="/sell" class="bg-indigo-700 text-white px-8 py-4 rounded-lg font-semibold hover:bg-indigo-600 transition">
              Sell Your Idea
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold text-indigo-900">$800M+</div>
            <div class="text-gray-600 mt-2">Market Opportunity</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-indigo-900">95%</div>
            <div class="text-gray-600 mt-2">Profit Margins</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-indigo-900">15-19x</div>
            <div class="text-gray-600 mt-2">Exit Multiples</div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">How TechFlunky Works</h2>
        
        <div class="grid md:grid-cols-2 gap-16 max-w-6xl mx-auto">
          <!-- For Sellers -->
          <div>
            <h3 class="text-2xl font-bold mb-8 text-indigo-900">For Idea Creators</h3>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="bg-indigo-100 text-indigo-900 w-10 h-10 rounded-full flex items-center justify-center font-bold">1</div>
                <div>
                  <h4 class="font-semibold mb-1">Package Your Concept</h4>
                  <p class="text-gray-600">Market research, business plan, financial projections, and technical specs</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="bg-indigo-100 text-indigo-900 w-10 h-10 rounded-full flex items-center justify-center font-bold">2</div>
                <div>
                  <h4 class="font-semibold mb-1">List Your Idea</h4>
                  <p class="text-gray-600">Choose your package tier and set your price ($1k-$100k+)</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="bg-indigo-100 text-indigo-900 w-10 h-10 rounded-full flex items-center justify-center font-bold">3</div>
                <div>
                  <h4 class="font-semibold mb-1">Get Paid</h4>
                  <p class="text-gray-600">Secure escrow release when buyer accepts your concept</p>
                </div>
              </div>
            </div>
          </div>

          <!-- For Buyers -->
          <div>
            <h3 class="text-2xl font-bold mb-8 text-indigo-900">For Entrepreneurs</h3>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="bg-purple-100 text-purple-900 w-10 h-10 rounded-full flex items-center justify-center font-bold">1</div>
                <div>
                  <h4 class="font-semibold mb-1">Browse Validated Ideas</h4>
                  <p class="text-gray-600">Filter by industry, price, and completeness level</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="bg-purple-100 text-purple-900 w-10 h-10 rounded-full flex items-center justify-center font-bold">2</div>
                <div>
                  <h4 class="font-semibold mb-1">Review Package Details</h4>
                  <p class="text-gray-600">Access market analysis, MVP specs, and growth projections</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="bg-purple-100 text-purple-900 w-10 h-10 rounded-full flex items-center justify-center font-bold">3</div>
                <div>
                  <h4 class="font-semibold mb-1">Launch Your Business</h4>
                  <p class="text-gray-600">Get everything you need to start generating revenue fast</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Listings Preview -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">Featured Business Concepts</h2>
        <p class="text-center text-gray-600 mb-12">Ready-to-launch ideas with proven market potential</p>
        
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <!-- Example Card 1 -->
          <div class="border rounded-lg p-6 hover:shadow-lg transition">
            <div class="text-sm text-purple-600 font-semibold mb-2">LAUNCH READY</div>
            <h3 class="text-xl font-bold mb-2">AI-Powered HR Compliance Platform</h3>
            <p class="text-gray-600 mb-4">Multi-state leave administration system with $800M market opportunity</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-indigo-900">$35,000</span>
              <a href="#" class="text-indigo-600 hover:text-indigo-800">View Details →</a>
            </div>
          </div>

          <!-- Example Card 2 -->
          <div class="border rounded-lg p-6 hover:shadow-lg transition">
            <div class="text-sm text-blue-600 font-semibold mb-2">BLUEPRINT</div>
            <h3 class="text-xl font-bold mb-2">D2C Sustainable Fashion Marketplace</h3>
            <p class="text-gray-600 mb-4">Eco-friendly clothing platform targeting Gen Z consumers</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-indigo-900">$15,000</span>
              <a href="#" class="text-indigo-600 hover:text-indigo-800">View Details →</a>
            </div>
          </div>

          <!-- Example Card 3 -->
          <div class="border rounded-lg p-6 hover:shadow-lg transition">
            <div class="text-sm text-green-600 font-semibold mb-2">CONCEPT</div>
            <h3 class="text-xl font-bold mb-2">EdTech Micro-Learning Platform</h3>
            <p class="text-gray-600 mb-4">Bite-sized professional development for remote teams</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-indigo-900">$5,000</span>
              <a href="#" class="text-indigo-600 hover:text-indigo-800">View Details →</a>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-12">
          <a href="/browse" class="bg-indigo-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-800 transition">
            Browse All Ideas
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-indigo-900 to-purple-800 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Start?</h2>
        <p class="text-xl mb-8 text-indigo-100">Join the marketplace where business ideas become reality</p>
        <a href="/signup" class="bg-white text-indigo-900 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition inline-block">
          Create Your Account
        </a>
      </div>
    </section>
  </main>
</Layout>
