      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, observerOptions);

  // Observe elements when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.scroll-fade').forEach(el => {
