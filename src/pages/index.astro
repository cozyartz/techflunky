---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="TechFlunky - Marketplace for Validated Business Ideas">
  <main class="min-h-screen bg-black">
    <Navigation currentPage="home" />

    <!-- Hero Section -->
    <section class="relative min-h-screen bg-gradient-to-br from-black via-gray-900 to-black text-white overflow-hidden flex items-center">
      <!-- Subtle grid pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="h-full w-full" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" stroke="%23fff" stroke-width="1"%3E%3Cpath d="M0 0h60v60H0z"/%3E%3C/g%3E%3C/svg%3E'); background-size: 60px 60px;"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Left: Typography-first content -->
            <div class="space-y-8">
              <div class="space-y-4">
                <h1 class="text-6xl md:text-7xl lg:text-8xl font-black leading-[0.9] tracking-tight">
                  <span class="block text-white animate-slide-up">Turn</span>
                  <span class="block text-yellow-400 animate-slide-up" style="animation-delay: 0.1s">Code</span>
                  <span class="block text-white animate-slide-up" style="animation-delay: 0.2s">Into</span>
                  <span class="block text-yellow-400 animate-slide-up" style="animation-delay: 0.3s">Capital</span>
                </h1>
              </div>

              <p class="text-xl md:text-2xl text-gray-300 max-w-2xl leading-relaxed animate-slide-up" style="animation-delay: 0.4s">
                The marketplace for <strong class="text-yellow-400">AI-validated business platforms</strong>. Built by developers, verified by AI, funded by entrepreneurs.
              </p>

              <!-- AI Validation Badge -->
              <div class="flex items-center gap-3 p-4 bg-yellow-400/10 border border-yellow-400/20 rounded-xl animate-slide-up" style="animation-delay: 0.45s">
                <div class="w-8 h-8 bg-yellow-400/20 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                </div>
                <div>
                  <div class="text-sm font-semibold text-yellow-400">AI-Verified Platforms</div>
                  <div class="text-xs text-gray-400">Every codebase examined for quality & truthfulness without exposing trade secrets</div>
                </div>
              </div>

              <div class="flex flex-col lg:flex-row gap-4 animate-slide-up" style="animation-delay: 0.5s">
                <a href="/invest" class="group bg-yellow-400 text-black px-8 py-4 rounded-xl font-bold text-lg hover:bg-yellow-300 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
                  <span class="flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                    </svg>
                    Start Investing
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                  </span>
                </a>
                <a href="/browse" class="bg-transparent border-2 border-yellow-400 text-yellow-400 px-8 py-4 rounded-xl font-bold text-lg hover:bg-yellow-400 hover:text-black transition-all duration-300 transform hover:scale-105">
                  Browse Platforms
                </a>
                <a href="/sell" class="bg-transparent border-2 border-gray-600 text-gray-300 px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-600 hover:text-white transition-all duration-300 transform hover:scale-105">
                  List Your Project
                </a>
              </div>

              <!-- Trust indicators -->
              <div class="flex items-center space-x-8 pt-8 animate-slide-up" style="animation-delay: 0.6s">
                <div class="text-center">
                  <div class="text-2xl font-bold text-yellow-400">$35K</div>
                  <div class="text-sm text-gray-400">Average Platform Value</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-bold text-yellow-400">18+</div>
                  <div class="text-sm text-gray-400">Months of Work</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-bold text-yellow-400">100%</div>
                  <div class="text-sm text-gray-400">Complete Packages</div>
                </div>
              </div>
            </div>

            <!-- Right: Featured platform preview -->
            <div class="relative animate-slide-up" style="animation-delay: 0.7s">
              <div class="bg-gradient-to-br from-gray-900/50 to-black/50 backdrop-blur-sm rounded-3xl p-8 border border-yellow-400/20 hover:border-yellow-400/40 transition-all duration-500 hover:transform hover:scale-105">
                <div class="space-y-6">
                  <div class="flex items-center justify-between">
                    <span class="bg-yellow-400/20 text-yellow-400 px-3 py-1 rounded-full text-sm font-semibold">FEATURED</span>
                    <span class="text-green-400 font-semibold">Available Now</span>
                  </div>

                  <h3 class="text-2xl font-bold text-white">AI-Powered HR Compliance Platform</h3>

                  <p class="text-gray-300 leading-relaxed">
                    Complete multi-state leave administration system with automated compliance tracking. Built on Cloudflare with AI automation.
                  </p>

                  <div class="grid grid-cols-2 gap-4">
                    <div class="bg-black/50 rounded-lg p-4 border border-yellow-400/10">
                      <div class="text-sm text-yellow-400 font-medium">Market Size</div>
                      <div class="text-xl font-bold text-white">$800M+</div>
                    </div>
                    <div class="bg-black/50 rounded-lg p-4 border border-yellow-400/10">
                      <div class="text-sm text-yellow-400 font-medium">Profit Margin</div>
                      <div class="text-xl font-bold text-white">95%</div>
                    </div>
                  </div>

                  <div class="flex items-center justify-between pt-4">
                    <div>
                      <div class="text-sm text-gray-400">Complete Package</div>
                      <div class="text-3xl font-bold text-yellow-400">$35,000</div>
                    </div>
                    <a href="/listing/ai-hr-leave-administration-platform" class="bg-yellow-400 text-black px-6 py-3 rounded-lg font-semibold hover:bg-yellow-300 transition group">
                      <span class="flex items-center gap-2">
                        View Details
                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                        </svg>
                      </span>
                    </a>
                  </div>
                </div>
              </div>

              <!-- Floating elements for visual interest -->
              <div class="absolute -top-4 -right-4 w-24 h-24 bg-yellow-400/10 rounded-full blur-xl animate-pulse"></div>
              <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-yellow-400/5 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="py-24 bg-gradient-to-br from-black to-gray-900">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">How It Works</h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Simple, transparent process connecting builders with entrepreneurs
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- For Builders -->
          <div class="space-y-8">
            <div class="text-center lg:text-left">
              <h3 class="text-3xl font-bold text-yellow-400 mb-4">For Builders</h3>
              <p class="text-gray-300 text-lg">Turn your completed projects into capital</p>
            </div>

            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-400/20 rounded-full flex items-center justify-center">
                  <span class="text-yellow-400 font-bold">1</span>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-white mb-2">Submit Your Platform</h4>
                  <p class="text-gray-300">Upload your complete codebase, documentation, and business materials</p>
                </div>
              </div>

              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-400/20 rounded-full flex items-center justify-center">
                  <span class="text-yellow-400 font-bold">2</span>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-white mb-2">We Verify & Package</h4>
                  <p class="text-gray-300">Our team validates functionality and creates professional presentation</p>
                </div>
              </div>

              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-400/20 rounded-full flex items-center justify-center">
                  <span class="text-yellow-400 font-bold">3</span>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-white mb-2">Get Paid</h4>
                  <p class="text-gray-300">Receive fair compensation for months of development work</p>
                </div>
              </div>
            </div>

            <div class="pt-4">
              <a href="/sell" class="inline-flex items-center gap-2 bg-yellow-400 text-black px-6 py-3 rounded-lg font-semibold hover:bg-yellow-300 transition">
                List Your Project
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- For Entrepreneurs -->
          <div class="space-y-8">
            <div class="text-center lg:text-left">
              <h3 class="text-3xl font-bold text-yellow-400 mb-4">For Entrepreneurs</h3>
              <p class="text-gray-300 text-lg">Skip development, launch immediately</p>
            </div>

            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-400/20 rounded-full flex items-center justify-center">
                  <span class="text-yellow-400 font-bold">1</span>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-white mb-2">Browse Platforms</h4>
                  <p class="text-gray-300">Explore complete business solutions with market validation</p>
                </div>
              </div>

              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-400/20 rounded-full flex items-center justify-center">
                  <span class="text-yellow-400 font-bold">2</span>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-white mb-2">Review Everything</h4>
                  <p class="text-gray-300">Code, market research, customer lists, and investor packages included</p>
                </div>
              </div>

              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-400/20 rounded-full flex items-center justify-center">
                  <span class="text-yellow-400 font-bold">3</span>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-white mb-2">Launch & Scale</h4>
                  <p class="text-gray-300">Deploy immediately with proven business model and customer base</p>
                </div>
              </div>
            </div>

            <div class="pt-4">
              <a href="/browse" class="inline-flex items-center gap-2 bg-transparent border-2 border-yellow-400 text-yellow-400 px-6 py-3 rounded-lg font-semibold hover:bg-yellow-400 hover:text-black transition">
                Browse Platforms
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Value Proposition Section -->
    <section class="py-24 bg-black">
      <div class="container mx-auto px-4">
        <div class="text-center mb-20">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">Why Choose TechFlunky</h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Skip 18 months of development. Get proven, market-validated platforms ready for immediate launch.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="group text-center hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-20 h-20 bg-gradient-to-br from-yellow-400/20 to-yellow-400/10 border border-yellow-400/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:border-yellow-400/60 transition-all duration-300">
              <svg class="w-10 h-10 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-yellow-400 transition-colors">Market Validated</h3>
            <p class="text-gray-300 leading-relaxed">Every platform includes comprehensive market research and proven demand validation</p>
          </div>

          <div class="group text-center hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-20 h-20 bg-gradient-to-br from-yellow-400/20 to-yellow-400/10 border border-yellow-400/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:border-yellow-400/60 transition-all duration-300">
              <svg class="w-10 h-10 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-yellow-400 transition-colors">Production Ready</h3>
            <p class="text-gray-300 leading-relaxed">Complete platforms with modern infrastructure, not prototypes or concepts</p>
          </div>

          <div class="group text-center hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-20 h-20 bg-gradient-to-br from-yellow-400/20 to-yellow-400/10 border border-yellow-400/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:border-yellow-400/60 transition-all duration-300">
              <svg class="w-10 h-10 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-yellow-400 transition-colors">High Margins</h3>
            <p class="text-gray-300 leading-relaxed">95%+ profit margins with minimal infrastructure costs using modern cloud platforms</p>
          </div>

          <div class="group text-center hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-20 h-20 bg-gradient-to-br from-yellow-400/20 to-yellow-400/10 border border-yellow-400/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:border-yellow-400/60 transition-all duration-300">
              <svg class="w-10 h-10 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-yellow-400 transition-colors">Launch Immediately</h3>
            <p class="text-gray-300 leading-relaxed">Complete packages including customers, documentation, and investor materials</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why I'm Building This -->
    <section class="py-20 bg-gradient-to-br from-black to-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold mb-4 text-white">The Real Story</h2>
            <p class="text-xl text-gray-300">Why I built this platform and what you're actually getting</p>
          </div>

          <div class="bg-gradient-to-br from-gray-900 to-black p-8 rounded-2xl mb-8 border border-yellow-400/20">
            <div class="prose prose-lg max-w-none">
              <p class="text-gray-300 mb-6">
                <strong class="text-yellow-400">Here's what happened:</strong> I built a complete HR compliance platform
                after researching the market extensively. The opportunity is massive - $800M+ market with
                companies desperately needing automated solutions.
              </p>
              <p class="text-gray-300 mb-6">
                <strong class="text-yellow-400">The challenge?</strong> I don't have the capital for customer acquisition
                and scaling. This platform could generate $1-3M ARR, but needs someone with funding and
                business development expertise to take it live.
              </p>
              <p class="text-gray-300 mb-6">
                <strong class="text-yellow-400">What you get:</strong> Everything. 42-page market analysis, working platform,
                customer list, investor package, technical documentation. Skip 18 months of development.
              </p>
              <p class="text-gray-300">
                <strong class="text-yellow-400">Fair deal:</strong> $35K covers my development costs and research time.
                You get a validated platform with $36-45M exit potential at current HR tech multiples.
              </p>
            </div>
          </div>

          <div class="grid md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-yellow-400/20 border border-yellow-400/40 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold mb-2 text-white">Production Platform</h3>
              <p class="text-gray-300 text-sm">Working Cloudflare infrastructure with AI automation, not mockups</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-yellow-400/20 border border-yellow-400/40 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold mb-2 text-white">Complete Package</h3>
              <p class="text-gray-300 text-sm">Market research, customer list, investor deck, deployment guides</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-yellow-400/20 border border-yellow-400/40 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold mb-2 text-white">Transparent Pricing</h3>
              <p class="text-gray-300 text-sm">Fair value for 18+ months of work, not marketplace markup</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 bg-gradient-to-br from-gray-900 via-black to-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white leading-tight">
            Ready to <span class="text-yellow-400">Launch</span> or <span class="text-yellow-400">List</span>?
          </h2>
          <p class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto leading-relaxed">
            Join the marketplace connecting talented builders with resourceful entrepreneurs
          </p>

          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <a href="/browse" class="group bg-yellow-400 text-black px-10 py-4 rounded-xl font-bold text-lg hover:bg-yellow-300 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
              <span class="flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                Browse Platforms
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </span>
            </a>

            <div class="text-gray-400 font-medium">or</div>

            <a href="/sell" class="group bg-transparent border-2 border-yellow-400 text-yellow-400 px-10 py-4 rounded-xl font-bold text-lg hover:bg-yellow-400 hover:text-black transition-all duration-300 transform hover:scale-105">
