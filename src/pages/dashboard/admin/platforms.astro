<script>
  // Platform management functionality
  document.addEventListener('DOMContentLoaded', () => {
    // Approval/rejection handlers
    const approveButtons = document.querySelectorAll('[data-action="approve"]');
    const rejectButtons = document.querySelectorAll('[data-action="reject"]');

    approveButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const platformId = e.target.closest('tr').dataset.platformId;
        approvePlatform(platformId);
      });
    });

    rejectButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const platformId = e.target.closest('tr').dataset.platformId;
        rejectPlatform(platformId);
      });
    });

    // Search functionality
    const searchInput = document.querySelector('input[type="text"]');
    searchInput?.addEventListener('input', debounce((e) => {
      filterPlatforms(e.target.value);
    }, 300));

    // Filter functionality
    const filterSelects = document.querySelectorAll('select');
    filterSelects.forEach(select => {
      select.addEventListener('change', () => {
        applyFilters();
      });
    });
  });

  async function approvePlatform(platformId) {
    try {
      const response = await fetch(`/api/admin/platforms/${platformId}/approve`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      if (response.ok) {
        // Update UI to show approved status
        location.reload();
      }
    } catch (error) {
      console.error('Failed to approve platform:', error);
    }
  }

  async function rejectPlatform(platformId) {
    try {
      const response = await fetch(`/api/admin/platforms/${platformId}/reject`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      if (response.ok) {
        // Update UI to show rejected status
        location.reload();
      }
    } catch (error) {
      console.error('Failed to reject platform:', error);
    }
  }

  function filterPlatforms(searchTerm) {
    // Implement client-side filtering or make API call
    console.log('Filtering platforms:', searchTerm);
  }

  function applyFilters() {
    // Collect filter values and apply them
    console.log('Applying filters');
  }

  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }
</script>