      <div class="text-3xl font-bold text-white">$25.7K</div>
      <p class="text-sm text-gray-400">Per transaction</p>
    </div>
  </div>

  <!-- Revenue Chart and Revenue Breakdown -->
  <div class="grid lg:grid-cols-3 gap-8 mb-8">
    <!-- Revenue Chart - 2 columns -->
    <div class="lg:col-span-2">
      <div id="revenue-chart-detailed"></div>
    </div>

    <!-- Revenue Breakdown - 1 column -->
    <div class="bg-gradient-to-br from-gray-900/50 to-black/50 backdrop-blur-sm rounded-2xl border border-yellow-400/20 p-6 hover:border-yellow-400/40 transition-all duration-300">
      <h3 class="text-lg font-semibold text-white mb-6">Revenue Breakdown</h3>

      <div class="space-y-4">
        <div class="relative">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm font-medium text-white">Platform Sales</span>
            <span class="text-sm text-yellow-400 font-semibold">88.5%</span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2">
            <div class="bg-yellow-400 h-2 rounded-full" style="width: 88.5%"></div>
          </div>
          <div class="text-right text-xs text-gray-400 mt-1">$128.5K</div>
        </div>

        <div class="relative">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm font-medium text-white">Professional Services</span>
            <span class="text-sm text-blue-400 font-semibold">11.5%</span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2">
            <div class="bg-blue-400 h-2 rounded-full" style="width: 11.5%"></div>
          </div>
          <div class="text-right text-xs text-gray-400 mt-1">$16.7K</div>
        </div>
      </div>

      <div class="mt-8 pt-6 border-t border-gray-700">
        <h4 class="text-sm font-medium text-white mb-4">Top Revenue Categories</h4>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              <span class="text-sm text-gray-300">HR & Compliance</span>
            </div>
            <span class="text-sm font-medium text-white">$85K</span>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-blue-400 rounded-full"></div>
              <span class="text-sm text-gray-300">Healthcare</span>
            </div>
            <span class="text-sm font-medium text-white">$28.5K</span>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-purple-400 rounded-full"></div>
              <span class="text-sm text-gray-300">FinTech</span>
            </div>
            <span class="text-sm font-medium text-white">$22K</span>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
              <span class="text-sm text-gray-300">E-commerce</span>
            </div>
            <span class="text-sm font-medium text-white">$9.7K</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Revenue Analytics Tables -->
  <div class="grid lg:grid-cols-2 gap-8">
    <!-- Top Earning Platforms -->
    <div class="bg-gradient-to-br from-gray-900/50 to-black/50 backdrop-blur-sm rounded-2xl border border-yellow-400/20 p-6 hover:border-yellow-400/40 transition-all duration-300">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-white">Top Earning Platforms</h3>
        <button class="text-yellow-400 hover:text-yellow-300 text-sm font-medium">View All</button>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-700">
              <th class="text-left text-xs font-medium text-gray-400 uppercase tracking-wider pb-3">Platform</th>
              <th class="text-right text-xs font-medium text-gray-400 uppercase tracking-wider pb-3">Revenue</th>
              <th class="text-right text-xs font-medium text-gray-400 uppercase tracking-wider pb-3">Sales</th>
            </tr>
          </thead>
          <tbody class="space-y-3">
            <tr class="border-b border-gray-800">
              <td class="py-3">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-yellow-400/20 rounded-lg flex items-center justify-center">
                    <span class="text-xs font-semibold text-yellow-400">HR</span>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-white">AI HR Compliance Platform</div>
                    <div class="text-xs text-gray-400">Enterprise solution</div>
                  </div>
                </div>
              </td>
              <td class="py-3 text-right text-sm font-semibold text-green-400">$70,000</td>
              <td class="py-3 text-right text-sm text-gray-300">2</td>
            </tr>

            <tr class="border-b border-gray-800">
              <td class="py-3">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-blue-400/20 rounded-lg flex items-center justify-center">
                    <span class="text-xs font-semibold text-blue-400">HC</span>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-white">Healthcare Analytics Suite</div>
                    <div class="text-xs text-gray-400">Medical data platform</div>
                  </div>
                </div>
              </td>
              <td class="py-3 text-right text-sm font-semibold text-green-400">$28,500</td>
              <td class="py-3 text-right text-sm text-gray-300">1</td>
            </tr>

            <tr class="border-b border-gray-800">
              <td class="py-3">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-purple-400/20 rounded-lg flex items-center justify-center">
                    <span class="text-xs font-semibold text-purple-400">FT</span>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-white">FinTech Trading Platform</div>
                    <div class="text-xs text-gray-400">Crypto trading solution</div>
                  </div>
                </div>
              </td>
              <td class="py-3 text-right text-sm font-semibold text-green-400">$22,000</td>
              <td class="py-3 text-right text-sm text-gray-300">1</td>
            </tr>

            <tr class="border-b border-gray-800">
              <td class="py-3">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-green-400/20 rounded-lg flex items-center justify-center">
                    <span class="text-xs font-semibold text-green-400">EC</span>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-white">E-commerce Platform</div>
                    <div class="text-xs text-gray-400">Multi-vendor marketplace</div>
                  </div>
                </div>
              </td>
              <td class="py-3 text-right text-sm font-semibold text-green-400">$8,000</td>
              <td class="py-3 text-right text-sm text-gray-300">1</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Payment & Escrow Status -->
    <div class="bg-gradient-to-br from-gray-900/50 to-black/50 backdrop-blur-sm rounded-2xl border border-yellow-400/20 p-6 hover:border-yellow-400/40 transition-all duration-300">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-white">Payment & Escrow Status</h3>
        <button class="text-yellow-400 hover:text-yellow-300 text-sm font-medium">Manage</button>
      </div>

      <div class="space-y-4">
        <!-- Pending Escrow -->
        <div class="p-4 bg-yellow-400/10 border border-yellow-400/20 rounded-lg">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-white">Pending Escrow</h4>
            <span class="text-yellow-400 font-semibold">$45,000</span>
          </div>
          <p class="text-xs text-gray-400 mb-3">3 transactions awaiting completion</p>
          <div class="flex items-center justify-between text-xs">
            <span class="text-gray-400">HR Platform #1</span>
            <span class="text-yellow-400">$35,000</span>
          </div>
          <div class="flex items-center justify-between text-xs mt-1">
            <span class="text-gray-400">Analytics Suite #1</span>
            <span class="text-yellow-400">$10,000</span>
          </div>
        </div>

        <!-- Available for Release -->
        <div class="p-4 bg-green-400/10 border border-green-400/20 rounded-lg">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-white">Ready for Release</h4>
            <span class="text-green-400 font-semibold">$22,000</span>
          </div>
          <p class="text-xs text-gray-400 mb-3">1 transaction ready for release</p>
          <div class="flex items-center justify-between text-xs">
            <span class="text-gray-400">FinTech Platform #1</span>
            <span class="text-green-400">$22,000</span>
          </div>
          <button class="mt-3 w-full bg-green-400 text-black py-2 px-3 rounded-lg text-xs font-medium hover:bg-green-300 transition-colors">
            Release Funds
          </button>
        </div>

        <!-- Completed This Month -->
        <div class="p-4 bg-gray-800/30 border border-gray-700 rounded-lg">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-white">Completed This Month</h4>
            <span class="text-white font-semibold">$78,200</span>
          </div>
          <p class="text-xs text-gray-400">8 transactions completed</p>
        </div>
      </div>

      <!-- Payment Methods -->
      <div class="mt-6 pt-6 border-t border-gray-700">
        <h4 class="text-sm font-medium text-white mb-3">Payment Methods</h4>
        <div class="grid grid-cols-2 gap-3">
          <div class="flex items-center space-x-2 p-2 bg-gray-800/30 rounded">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span class="text-xs text-gray-300">Stripe</span>
            <span class="text-xs text-green-400 ml-auto">95%</span>
          </div>
          <div class="flex items-center space-x-2 p-2 bg-gray-800/30 rounded">
            <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
            <span class="text-xs text-gray-300">Wire</span>
            <span class="text-xs text-blue-400 ml-auto">5%</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  import RevenueChart from '../../../components/admin/RevenueChart.tsx';
  import { createRoot } from 'react-dom/client';
  import React from 'react';

  // Enhanced mock data for detailed revenue view
  const mockDetailedChartData = [
    { date: '2024-01-01', revenue: 15000, transactions: 12 },
