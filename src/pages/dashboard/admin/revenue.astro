---
import AdminLayout from '../../../components/admin/AdminLayout.astro';
---

<AdminLayout title="Revenue Analytics" currentPage="revenue">
  <!-- Revenue Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-gradient-to-br from-gray-900/50 to-black/50 backdrop-blur-sm rounded-2xl border border-green-400/20 p-6 hover:border-green-400/40 transition-all duration-300">
