---
import Layout from '../layouts/Layout.astro';
import { BentoGrid, BentoBox } from '../components/bento/BentoGridMotion';
---

<Layout title="Sign Up - TechFlunky">
  <main class="min-h-screen bg-bento-light">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-indigo-900 via-purple-800 to-indigo-900 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Join TechFlunky</h1>
          <p class="text-xl text-indigo-100">
            Start buying and selling validated business ideas today
          </p>
        </div>
      </div>
    </section>

    <!-- Signup Form Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <BentoGrid client:load>
          <!-- Main Signup Form -->
          <BentoBox size="large" className="lg:col-span-8 lg:row-span-4 bg-white border border-gray-200" gradient>
            <div class="p-8">
              <div class="max-w-md mx-auto">
                <h2 class="text-2xl font-bold text-center mb-8">Create Your Account</h2>

                <form class="space-y-6">
                  <div>
                    <label for="account-type" class="block text-sm font-medium text-gray-700 mb-2">
                      I want to:
                    </label>
                    <select
                      id="account-type"
                      name="account-type"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    >
                      <option value="">Select your primary interest</option>
                      <option value="buyer">Buy business ideas</option>
                      <option value="seller">Sell my ideas</option>
                      <option value="both">Both buy and sell</option>
                    </select>
                  </div>

                  <div class="grid md:grid-cols-2 gap-4">
                    <div>
                      <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">
                        First Name
                      </label>
                      <input
                        type="text"
                        id="first-name"
                        name="first-name"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                        placeholder="John"
                      />
                    </div>
                    <div>
                      <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">
                        Last Name
                      </label>
                      <input
                        type="text"
                        id="last-name"
                        name="last-name"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                        placeholder="Doe"
                      />
                    </div>
                  </div>

                  <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                      Email Address
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                      placeholder="john@example.com"
                    />
                  </div>

                  <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                      Password
                    </label>
                    <input
                      type="password"
                      id="password"
                      name="password"
                      required
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                      placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                    />
                  </div>

                  <div>
                    <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                      Company (Optional)
                    </label>
                    <input
                      type="text"
                      id="company"
                      name="company"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                      placeholder="Your Company"
                    />
                  </div>

                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input
                        id="terms"
                        name="terms"
                        type="checkbox"
                        required
                        class="w-4 h-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                      />
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="terms" class="text-gray-700">
                        I agree to the <a href="/terms" class="text-indigo-600 hover:text-indigo-500">Terms of Service</a> and <a href="/privacy" class="text-indigo-600 hover:text-indigo-500">Privacy Policy</a>
                      </label>
                    </div>
                  </div>

                  <button
                    type="submit"
                    class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-200"
                  >
                    Create Account
                  </button>
                </form>

                <div class="mt-6 text-center">
                  <p class="text-gray-600">
                    Already have an account?
                    <a href="/login" class="text-indigo-600 hover:text-indigo-500 font-medium">
                      Sign in
                    </a>
                  </p>
                </div>

                <!-- Social Login -->
                <div class="mt-6">
                  <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                      <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                      <span class="px-2 bg-white text-gray-500">Or continue with</span>
                    </div>
                  </div>

                  <div class="mt-6 grid grid-cols-2 gap-3">
                    <button
                      type="button"
                      class="w-full inline-flex justify-center py-3 px-4 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-500 hover:bg-gray-50"
                    >
                      <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                      </svg>
                      <span class="ml-2">Google</span>
                    </button>

                    <button
                      type="button"
                      class="w-full inline-flex justify-center py-3 px-4 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-500 hover:bg-gray-50"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      <span class="ml-2">GitHub</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </BentoBox>

          <!-- Benefits Sidebar -->
          <BentoBox size="small" className="lg:col-span-4 lg:row-span-2 bg-gradient-to-br from-indigo-50 to-purple-50" gradient>
            <div class="h-full flex flex-col">
              <h3 class="text-lg font-bold mb-4">ðŸš€ For Entrepreneurs</h3>
              <div class="space-y-3 flex-grow">
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-indigo-500 rounded-full mt-2"></div>
                  <span class="text-sm">Access 127+ validated business ideas</span>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-indigo-500 rounded-full mt-2"></div>
                  <span class="text-sm">Complete implementation guides</span>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-indigo-500 rounded-full mt-2"></div>
                  <span class="text-sm">Market research & financial models</span>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-indigo-500 rounded-full mt-2"></div>
                  <span class="text-sm">Direct contact with creators</span>
                </div>
              </div>
            </div>
          </BentoBox>

          <BentoBox size="small" className="lg:col-span-4 lg:row-span-2 bg-gradient-to-br from-green-50 to-emerald-50" gradient>
            <div class="h-full flex flex-col">
              <h3 class="text-lg font-bold mb-4">ðŸ’¡ For Creators</h3>
              <div class="space-y-3 flex-grow">
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                  <span class="text-sm">Monetize your unused ideas</span>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                  <span class="text-sm">Expert packaging support</span>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                  <span class="text-sm">IP protection & secure sales</span>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                  <span class="text-sm">$1.5K - $50K+ per idea</span>
                </div>
              </div>
            </div>
          </BentoBox>
        </BentoGrid>
      </div>
    </section>
  </main>
</Layout>