            <div class="text-4xl font-bold mb-2">$29</div>
            <p class="text-gray-400 mb-6">per month, optional</p>
            <ul class="space-y-2 text-sm">
              <li class="flex items-center">
                <span class="text-blue-400 mr-2">✓</span>
                Featured placement
              </li>
              <li class="flex items-center">
                <span class="text-blue-400 mr-2">✓</span>
                Advanced analytics
              </li>
              <li class="flex items-center">
                <span class="text-blue-400 mr-2">✓</span>
                Priority AI matching
              </li>
            </ul>
          </div>
