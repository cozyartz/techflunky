              <li class="flex items-center">
                <span class="text-purple-400 mr-2">✓</span>
                Basic white-label
              </li>
            </ul>
            <button class="w-full bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded">
              Choose Enterprise
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Premium Services -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 text-yellow-400">
          Premium Services
        </h2>

        <!-- White-Label Portals -->
        <div class="mb-16">
          <h3 class="text-2xl font-bold mb-8 text-center text-white">White-Label Portals</h3>
          <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            <div class="bg-gray-900 p-6 rounded-lg border border-gray-800">
              <h4 class="text-lg font-bold mb-2 text-blue-400">Basic</h4>
              <div class="text-3xl font-bold mb-4">$499</div>
              <p class="text-sm text-gray-400 mb-4">per month</p>
              <ul class="space-y-2 text-sm mb-6">
                <li class="flex items-center">
                  <span class="text-blue-400 mr-2">✓</span>
                  Custom branding
                </li>
                <li class="flex items-center">
                  <span class="text-blue-400 mr-2">✓</span>
