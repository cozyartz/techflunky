---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description = 'TechFlunky Seller Dashboard', currentPage = 'overview' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/techflunky-logo.png" />
    <link rel="apple-touch-icon" href="/assets/techflunky-logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body class="bg-black text-white antialiased overflow-hidden">
    <!-- Seller Dashboard Layout -->
    <div class="flex h-screen">
      <!-- Sidebar -->
      <aside id="seller-sidebar" class="w-64 bg-gradient-to-b from-gray-900 to-black border-r border-yellow-400/20 transition-all duration-300 lg:translate-x-0 -translate-x-full fixed lg:relative z-30 h-full">
        <!-- Logo & User Section -->
        <div class="p-6 border-b border-yellow-400/20">
          <div class="flex items-center space-x-3 mb-4">
            <img src="/assets/techflunky-logo.png" alt="TechFlunky" class="w-8 h-8">
            <div>
              <h1 class="text-lg font-bold text-white">TechFlunky</h1>
              <p class="text-xs text-yellow-400">Seller Portal</p>
            </div>
          </div>

          <!-- Seller Profile Quick View -->
          <div class="bg-gray-800/30 rounded-lg p-3">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-yellow-400 rounded-full flex items-center justify-center">
                <span class="text-black font-bold text-sm">JD</span>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-white truncate">John Developer</p>
                <p class="text-xs text-gray-400">Verified Seller</p>
              </div>
              <div class="flex items-center space-x-1">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <span class="text-xs text-green-400">Active</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-4 py-6 space-y-2">
          <!-- Main Navigation */
          <a href="/dashboard/seller" class={`seller-nav-item ${currentPage === 'overview' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <span>Dashboard</span>
          </a>

          <a href="/dashboard/seller/listings" class={`seller-nav-item ${currentPage === 'listings' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <span>My Platforms</span>
            <div class="ml-auto flex items-center space-x-1">
              <span class="text-xs bg-yellow-400/20 text-yellow-400 px-2 py-1 rounded-full">3</span>
            </div>
          </a>

          <a href="/dashboard/seller/earnings" class={`seller-nav-item ${currentPage === 'earnings' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Earnings</span>
          </a>

          <a href="/dashboard/seller/analytics" class={`seller-nav-item ${currentPage === 'analytics' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span>Analytics</span>
          </a>

          <!-- Divider -->
          <div class="border-t border-gray-700 my-4"></div>

          <!-- Platform Management -->
          <div class="space-y-2">
            <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider px-3">Platform Management</p>

            <a href="/dashboard/seller/upload" class={`seller-nav-item ${currentPage === 'upload' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <span>List New Platform</span>
            </a>

            <a href="/dashboard/seller/validation" class={`seller-nav-item ${currentPage === 'validation' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>AI Validation</span>
              <div class="ml-auto flex items-center space-x-1">
                <div class="w-2 h-2 bg-orange-400 rounded-full animate-pulse"></div>
                <span class="text-xs text-orange-400">1</span>
              </div>
            </a>

            <a href="/dashboard/seller/optimization" class={`seller-nav-item ${currentPage === 'optimization' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              <span>Optimize Listings</span>
            </a>
          </div>

          <!-- Divider -->
          <div class="border-t border-gray-700 my-4"></div>

          <!-- Support & Tools -->
          <div class="space-y-2">
            <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider px-3">Support & Tools</p>

            <a href="/dashboard/seller/messages" class={`seller-nav-item ${currentPage === 'messages' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <span>Messages</span>
              <div class="ml-auto flex items-center space-x-1">
                <span class="text-xs bg-blue-400/20 text-blue-400 px-2 py-1 rounded-full">2</span>
              </div>
            </a>

            <a href="/dashboard/seller/resources" class={`seller-nav-item ${currentPage === 'resources' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              <span>Seller Resources</span>
            </a>

            <a href="/dashboard/seller/settings" class={`seller-nav-item ${currentPage === 'settings' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span>Settings</span>
            </a>
          </div>
        </nav>

        <!-- Seller Stats Quick View -->
        <div class="p-4 border-t border-gray-700">
          <div class="bg-gradient-to-r from-yellow-400/10 to-green-400/10 rounded-lg p-3 border border-yellow-400/20">
            <div class="text-center">
              <div class="text-lg font-bold text-yellow-400">$45K</div>
              <div class="text-xs text-gray-400">Total Earnings</div>
            </div>
            <div class="grid grid-cols-2 gap-2 mt-3 text-xs">
              <div class="text-center">
                <div class="font-semibold text-white">5</div>
                <div class="text-gray-400">Platforms</div>
              </div>
              <div class="text-center">
                <div class="font-semibold text-white">4.8</div>
                <div class="text-gray-400">Rating</div>
              </div>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col min-w-0">
        <!-- Top Header -->
        <header class="bg-black/50 backdrop-blur-sm border-b border-yellow-400/20 px-6 py-4">
          <div class="flex items-center justify-between">
            <!-- Mobile Menu Button -->
            <button id="seller-menu-toggle" class="lg:hidden text-white hover:text-yellow-400 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>

            <!-- Page Title & Breadcrumb -->
            <div class="hidden lg:block">
              <div class="flex items-center space-x-2 text-sm text-gray-400 mb-1">
                <span>Seller Dashboard</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span class="text-yellow-400 capitalize">{currentPage}</span>
              </div>
              <h1 class="text-2xl font-bold text-white">{title}</h1>
            </div>

            <!-- Header Actions -->
            <div class="flex items-center space-x-4">
              <!-- Quick Upload Button -->
              <a href="/dashboard/seller/upload" class="hidden sm:flex items-center space-x-2 bg-yellow-400 text-black px-4 py-2 rounded-lg font-medium hover:bg-yellow-300 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                <span>New Platform</span>
              </a>

              <!-- Notifications -->
              <button class="relative text-gray-400 hover:text-yellow-400 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4 15v5h5l-5-5zM4 9V4h5L4 9zm11-5h5v5l-5-5z"/>
                </svg>
                <span class="absolute -top-1 -right-1 w-3 h-3 bg-yellow-400 rounded-full animate-pulse"></span>
              </button>

              <!-- Messages -->
              <button class="relative text-gray-400 hover:text-yellow-400 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                <span class="absolute -top-1 -right-1 w-3 h-3 bg-blue-400 rounded-full flex items-center justify-center">
                  <span class="text-xs text-white font-bold">2</span>
                </span>
              </button>

              <!-- Seller Performance Indicator -->
              <div class="hidden sm:flex items-center space-x-2 bg-green-400/10 border border-green-400/20 rounded-lg px-3 py-2">
                <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                <span class="text-sm text-green-400 font-medium">Excellent Seller</span>
              </div>

              <!-- Profile Dropdown -->
              <div class="relative">
                <button class="flex items-center space-x-2 text-gray-400 hover:text-white transition-colors">
                  <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center">
                    <span class="text-black font-semibold text-sm">JD</span>
                  </div>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-auto bg-gradient-to-br from-black via-gray-900 to-black">
          <div class="p-6">
            <slot />
          </div>
        </main>
      </div>
    </div>

    <!-- Mobile Overlay -->
    <div id="seller-sidebar-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-20 lg:hidden hidden"></div>

    <script>
      // Mobile sidebar toggle
      const menuToggle = document.getElementById('seller-menu-toggle');
      const sidebar = document.getElementById('seller-sidebar');
      const overlay = document.getElementById('seller-sidebar-overlay');

      menuToggle?.addEventListener('click', () => {
        sidebar?.classList.toggle('-translate-x-full');
        overlay?.classList.toggle('hidden');
      });

      overlay?.addEventListener('click', () => {
        sidebar?.classList.add('-translate-x-full');
        overlay?.classList.add('hidden');
      });

      // Active page highlighting
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll('.seller-nav-item');

      navItems.forEach(item => {
        if (item.href === currentPath) {
          item.classList.add('active');
        }
      });

      // Real-time updates simulation
      setInterval(() => {
        // Update notification badges and status indicators
        const notificationBadges = document.querySelectorAll('.animate-pulse');
        notificationBadges.forEach(badge => {
          // Simulate real-time updates
        });
      }, 10000);
    </script>

    <style>
      .seller-nav-item {
        @apply flex items-center space-x-3 px-3 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-gray-800/50 transition-all duration-200 group relative;
        margin-bottom: 4px;
      }

      .seller-nav-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 3px;
        height: 0;
        background: var(--dashboard-accent-yellow);
        border-radius: 0 2px 2px 0;
        transition: height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .seller-nav-item:hover {
        transform: translateX(4px);
        border: 1px solid rgba(251, 191, 36, 0.2);
      }

      .seller-nav-item:hover::before {
        height: 20px;
      }

      .seller-nav-item.active {
        @apply bg-yellow-400/10 text-yellow-400 border border-yellow-400/20;
        transform: translateX(4px);
      }

      .seller-nav-item.active::before {
        height: 24px;
      }

      .nav-icon {
        @apply w-5 h-5 transition-all duration-200;
      }

      .seller-nav-item:hover .nav-icon {
        @apply text-yellow-400;
        transform: scale(1.1);
      }

      .seller-nav-item.active .nav-icon {
        @apply text-yellow-400;
      }

      /* Enhanced header backdrop blur */
      header {
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
      }

      /* Seller-specific styling */
      .seller-sidebar {
        background: linear-gradient(180deg, rgba(17, 24, 39, 0.95) 0%, rgba(0, 0, 0, 0.8) 100%);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
      }

      /* Enhanced mobile responsiveness */
      @media (max-width: 1024px) {
        aside {
          width: 280px;
        }
      }

      @media (max-width: 768px) {
        .seller-nav-item {
          @apply px-2 py-2;
        }
      }
    </style>
  </body>
</html>