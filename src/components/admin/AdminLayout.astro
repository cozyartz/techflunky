---
import '../../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description = 'TechFlunky Admin Dashboard', currentPage = 'overview' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/techflunky-logo.png" />
    <link rel="apple-touch-icon" href="/assets/techflunky-logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body class="bg-black text-white antialiased overflow-hidden">
    <!-- Admin Dashboard Layout -->
    <div class="flex h-screen">
      <!-- Sidebar -->
      <aside id="sidebar" class="w-64 bg-gradient-to-b from-gray-900 to-black border-r border-yellow-400/20 transition-all duration-300 lg:translate-x-0 -translate-x-full fixed lg:relative z-30 h-full">
        <!-- Logo Section -->
        <div class="p-6 border-b border-yellow-400/20">
          <div class="flex items-center space-x-3">
            <img src="/assets/techflunky-logo.png" alt="TechFlunky" class="w-8 h-8">
            <div>
              <h1 class="text-lg font-bold text-white">TechFlunky</h1>
              <p class="text-xs text-yellow-400">Admin Portal</p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-4 py-6 space-y-2">
          <a href="/dashboard/admin" class={`nav-item group ${currentPage === 'overview' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <span>Overview</span>
          </a>

          <a href="/dashboard/admin/revenue" class={`nav-item group ${currentPage === 'revenue' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Revenue</span>
          </a>

          <a href="/dashboard/admin/platforms" class={`nav-item group ${currentPage === 'platforms' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <span>Platforms</span>
          </a>

          <a href="/dashboard/admin/users" class={`nav-item group ${currentPage === 'users' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
            </svg>
            <span>Users</span>
          </a>

          <a href="/dashboard/admin/services" class={`nav-item group ${currentPage === 'services' ? 'active' : ''}`}>
            <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
            </svg>
            <span>Services</span>
          </a>

          <!-- Divider -->
          <div class="border-t border-gray-700 my-4"></div>

          <!-- Quick Actions -->
          <div class="space-y-2">
            <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider px-3">Quick Actions</p>

            <a href="/dashboard/admin/settings" class={`nav-item group ${currentPage === 'settings' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span>Settings</span>
            </a>

            <a href="/dashboard/admin/support" class={`nav-item group ${currentPage === 'support' ? 'active' : ''}`}>
              <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              <span>Support</span>
            </a>
          </div>
        </nav>

        <!-- Admin User Info -->
        <div class="p-4 border-t border-gray-700">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center">
              <span class="text-black font-semibold text-sm">A</span>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-white truncate">Admin User</p>
              <p class="text-xs text-gray-400">Super Admin</p>
            </div>
            <button class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
            </button>
          </div>
        </div>
      </aside>

      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col min-w-0">
        <!-- Top Header -->
        <header class="bg-black/50 backdrop-blur-sm border-b border-yellow-400/20 px-6 py-4">
          <div class="flex items-center justify-between">
            <!-- Mobile Menu Button -->
            <button id="menu-toggle" class="lg:hidden text-white hover:text-yellow-400 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>

            <!-- Page Title -->
            <div class="hidden lg:block">
              <h1 class="text-2xl font-bold text-white">{title}</h1>
            </div>

            <!-- Header Actions -->
            <div class="flex items-center space-x-4">
              <!-- Notifications -->
              <button class="relative text-gray-400 hover:text-yellow-400 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4 15v5h5l-5-5zM4 9V4h5L4 9zm11-5h5v5l-5-5z"/>
                </svg>
                <span class="absolute -top-1 -right-1 w-3 h-3 bg-yellow-400 rounded-full"></span>
              </button>

              <!-- Search -->
              <div class="hidden sm:block relative">
                <input
                  type="text"
                  placeholder="Search..."
                  class="bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 pl-10 text-white placeholder-gray-400 focus:border-yellow-400 focus:ring-1 focus:ring-yellow-400 transition-colors"
                >
                <svg class="absolute left-3 top-3 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>

              <!-- Status Indicator -->
              <div class="flex items-center space-x-2">
                <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                <span class="text-sm text-gray-400 hidden sm:block">All Systems Operational</span>
              </div>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-auto bg-gradient-to-br from-black via-gray-900 to-black">
          <div class="p-6">
            <slot />
          </div>
        </main>
      </div>
    </div>

    <!-- Mobile Overlay -->
    <div id="sidebar-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-20 lg:hidden hidden"></div>

    <script>
      // Mobile sidebar toggle
      const menuToggle = document.getElementById('menu-toggle');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebar-overlay');

      menuToggle?.addEventListener('click', () => {
        sidebar?.classList.toggle('-translate-x-full');
        overlay?.classList.toggle('hidden');
      });

      overlay?.addEventListener('click', () => {
        sidebar?.classList.add('-translate-x-full');
        overlay?.classList.add('hidden');
      });

      // Active page highlighting
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll('.nav-item');

      navItems.forEach(item => {
        if (item.href === currentPath) {
          item.classList.add('active');
        }
      });
    </script>

    <style>
      .nav-item {
        @apply flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800/50 transition-all duration-200;
      }

      .nav-item.active {
        @apply bg-yellow-400/10 text-yellow-400 border border-yellow-400/20;
      }

      .nav-item:hover {
        @apply transform scale-[1.02];
      }

      .nav-icon {
        @apply w-5 h-5 transition-colors;
      }

      .nav-item.active .nav-icon {
        @apply text-yellow-400;
      }

      .nav-item:hover .nav-icon {
        @apply text-yellow-400;
      }

      /* Custom scrollbar for main content */
      main::-webkit-scrollbar {
        width: 6px;
      }

      main::-webkit-scrollbar-track {
        @apply bg-gray-900;
      }

      main::-webkit-scrollbar-thumb {
        @apply bg-yellow-400/30 rounded-full;
      }

      main::-webkit-scrollbar-thumb:hover {
        @apply bg-yellow-400/50;
      }

      /* Glassmorphism effects */
      header {
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
      }

      /* Animation improvements */
      .nav-item {
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Mobile responsiveness */
      @media (max-width: 1024px) {
        aside {
          width: 280px;
        }
      }
    </style>
  </body>
</html>